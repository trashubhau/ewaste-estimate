{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py", // Point to your Flask app file
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" } 
    },
    {
      "src": "frontend/**", // Specify frontend files
       "use": "@vercel/static" 
    }
  ],
  "routes": [
    {
       "src": "/static/(.*)", // Route for static assets if needed later
       "dest": "/frontend/static/$1" 
    },
    {
      "src": "/api/(.*)", // Route API requests directly
      "dest": "api/index.py" // Point to your Flask app file
    },
     {
         "src": "/estimate", // Catch requests specifically for /estimate
         "dest": "api/index.py" // Route them to your Flask app
     },
    {
       "src": "/(.*)", // Route all other requests to the frontend
       "dest": "/frontend/$1" 
    }
  ]
}